<?xml version="1.0" standalone="no"?>

<graph>

	<changelog>
	</changelog>

	<description>

	Rocks Devel Appliance on EC2.

	</description>


	<!-- Graph Ordering for Kickstart Generation -->


	<order head="python-development">
		<tail>lite-base</tail>
	</order>

	<order head="compute-appliance">
		<tail>lite-base</tail>
	</order>

	<order head="networking-client">
		<tail>ec2-client</tail>
	</order>
	<order head="grub">
		<tail>ec2-client</tail>
	</order>
	<order head="partition">
		<tail>ec2-partition</tail>
	</order>

	<order head="database-schema">
		<tail>database-sec</tail>
	</order>

	<!-- Graph OO Framework -->

	<edge from="condor-server">
		<to>ec2-condor-server</to>
	</edge>

	<edge from="lite-client">
		<to>lite-base</to>
		<to>411-client</to>
		<to>node-certs</to>
		<to>pxeboot</to>
		<to>networking-client</to>
		<to>firewall</to>
	</edge>

	<edge from="lite-client" to="condor-client" arch="i386,x86_64" cond="Condor_Client"/>
	<edge from="lite-client" to="condor" arch="i386,x86_64" cond="Condor_Client"/>

	<edge from="lite-base">
		<to>node</to>
		<to>autofs</to>
		<to>snmp-server</to>
		<to>syslog</to>
		<to>security</to>
		<to>disk-stamp</to>
		<to>grub</to>
		<to>ip-diag</to>
		<to>logrotate</to>
		<to>rpc</to>
		<to>ntp</to>
		<to>firewall</to>
		<to>selinux</to>
		<to>i18n</to>
		<to>411-base</to>
		<to>greceptor</to>
		<to>mail</to>
		<to>partition</to>
		<to>yum</to>
	</edge>

	<!-- Now add EC2 specific Hacks and updates -->
	<edge from="server">
		<to>ec2-server</to>
		<to>ec2-common</to>
	</edge>

	<!-- ec2 tools on any node that is a Xen Dom0 --> 
	<edge from="client" cond="xen">
		<to>ec2-common</to>
	</edge>

	<edge from="lite-client" cond="ec2_enable">
		<to>ec2-client</to>
		<to>ec2-common</to>
		<to>ec2-partition</to>
	</edge>

	<edge from="client" cond="ec2_enable">
		<to>ec2-client</to>
		<to>ec2-common</to>
		<to>ec2-partition</to>
	</edge>

</graph>


